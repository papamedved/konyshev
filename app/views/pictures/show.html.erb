<div class="row">
  <div class="small-6 small-centered columns">
    <p id="notice"><%= notice %></p>

    <p>
      <%= image_tag @image_tumb %>

    </p>
    <p>
      <strong>Name:</strong>
      <%= @picture.name %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @picture.description %>
